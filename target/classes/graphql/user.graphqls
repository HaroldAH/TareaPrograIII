# ==============================
# ✅ SCHEMA GRAPHQL - Módulo User
# ==============================

extend type Query {
  getAllUsers: [UserDTO!]!
  getUserById(id: ID!): UserDTO
}

extend type Mutation {
  createUser(input: UserInput!): UserDTO
  deleteUser(id: ID!): Boolean
}

type UserDTO {
  id: ID!
  name: String!
  email: String!
  # password omitido por seguridad en respuesta
}

input UserInput {
  id: ID
  name: String!
  email: String!
  password: String!
}
