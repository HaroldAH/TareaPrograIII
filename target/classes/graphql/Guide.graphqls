# ==============================
# ✅ SCHEMA GRAPHQL - Módulo Guide
# ==============================

extend type Query {
  getAllGuides: [GuideDTO!]!
  getGuideById(id: ID!): GuideDTO
}

extend type Mutation {
  createGuide(input: GuideInput!): GuideDTO
  deleteGuide(id: ID!): Boolean
}

type GuideDTO {
  id: ID!
  title: String!
  content: String
  category: String
}

input GuideInput {
  id: ID
  title: String!
  content: String
  category: String
}
