# ==============================
# ✅ SCHEMA GRAPHQL - Módulo Role
# ==============================

extend type Query {
  getAllRoles: [RoleDTO!]!
  getRoleById(id: ID!): RoleDTO
}

extend type Mutation {
  createRole(input: RoleInput!): RoleDTO
  deleteRole(id: ID!): Boolean
}

type RoleDTO {
  id: ID!
  name: String!
  permissions: String
}

input RoleInput {
  id: ID
  name: String!
  permissions: String
}
